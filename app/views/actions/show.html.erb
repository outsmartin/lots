<h1>/Action</h1>

<p>
  <b>Name</b><br>
  <%= @action.name %>
</p>

<p>
  <b>Raid</b><br>
  <%= @action.raid_id %>
</p>

<p>
  <b>Expires</b><br>
  <%= @action.expires %>
</p>

<p>
  <b>Health left</b><br>
  <%= @action.health_left %>
</p>

<p>
  <b>Active</b><br>
  <%= @action.active %>
</p>

<div class="form-actions">
  <%= link_to 'Back', actions_path, :class => 'btn'  %>
  <%= link_to 'Edit', edit_action_path(@action), :class => 'btn' %>
  <%= link_to 'Delete', action_path(@action), :method => 'delete', :confirm => 'Are you sure?', :class => 'btn btn-danger' %>
</div>
