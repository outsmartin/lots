<%= form_for @action, :html => { :class => 'form-horizontal' } do |f| %>
  <fieldset>
    <legend><%= controller.action_name.capitalize %> /Action</legend>

    <div class="control-group">
      <%= f.label :name, :class => 'control-label' %>
      <div class="controls">
        <%= f.text_field :name, :class => 'text_field' %>
      </div>
    </div>

    <div class="control-group">
      <%= f.label :raid_id, :class => 'control-label' %>
      <div class="controls">
        <%= f.number_field :raid_id, :class => 'number_field' %>
      </div>
    </div>

    <div class="control-group">
      <%= f.label :expires, :class => 'control-label' %>
      <div class="controls">
        <%= f.datetime_select :expires, :class => 'datetime_select' %>
      </div>
    </div>

    <div class="control-group">
      <%= f.label :health_left, :class => 'control-label' %>
      <div class="controls">
        <%= f.text_field :health_left, :class => 'text_field' %>
      </div>
    </div>

    <div class="control-group">
      <%= f.label :active, :class => 'control-label' %>
      <div class="controls">
        <%= f.check_box :active, :class => 'check_box' %>
      </div>
    </div>

    <div class="form-actions">
      <%= f.submit nil, :class => 'btn btn-primary' %>
      <%= link_to 'Cancel', actions_path, :class => 'btn' %>
    </div>
  </fieldset>
<% end %>
