<h1>Raids</h1>
<table class="table table-striped">
  <thead>
    <tr>
      <th>Name</th>
      <th>Maximum Players</th>
      <th>Actions</th>
    </tr>
  </thead>
  <tbody>
    <% @raids.each do |raid| %>
      <tr>
        <td><%= link_to "#{raid.difficulty} #{raid.name}", raid_path(raid) %></td>
        <td><%= raid.players %></td>
        <td>
          <%= link_to 'Edit', edit_raid_path(raid), :class => 'btn btn-mini' %>
          <%= link_to 'Destroy', raid_path(raid), :method => :delete, :confirm => 'Are you sure?', :class => 'btn btn-mini btn-danger' %>
        </td>
      </tr>
    <% end %>
  </tbody>
</table>

<%= link_to 'New', new_raid_path, :class => 'btn btn-primary' %>
