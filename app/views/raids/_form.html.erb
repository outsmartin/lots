<%= form_for @raid, :html => { :class => 'form-horizontal' } do |f| %>
  <fieldset>
    <legend><%= controller.action_name.capitalize %> /Raid</legend>

    <div class="control-group">
      <%= f.label :name, :class => 'control-label' %>
      <div class="controls">
        <%= f.text_field :name, :class => 'text_field' %>
      </div>
    </div>

    <div class="control-group">
      <%= f.label :category, :class => 'control-label' %>
      <div class="controls">
        <%= f.text_field :category, :class => 'text_field' %>
      </div>
    </div>

    <div class="control-group">
      <%= f.label :players, :class => 'control-label' %>
      <div class="controls">
        <%= f.number_field :players, :class => 'number_field' %>
      </div>
    </div>

    <div class="control-group">
      <%= f.label :time, :class => 'control-label' %>
      <div class="controls">
        <%= f.datetime_select :time, :class => 'datetime_select' %>
      </div>
    </div>

    <div class="control-group">
      <%= f.label :difficulty, :class => 'control-label' %>
      <div class="controls">
        <%= f.text_field :difficulty, :class => 'text_field' %>
      </div>
    </div>

    <div class="control-group">
      <%= f.label :url, :class => 'control-label' %>
      <div class="controls">
        <%= f.text_field :url, :class => 'text_field' %>
      </div>
    </div>

    <div class="control-group">
      <%= f.label :health, :class => 'control-label' %>
      <div class="controls">
        <%= f.number_field :health, :class => 'number_field' %>
      </div>
    </div>

    <div class="form-actions">
      <%= f.submit nil, :class => 'btn btn-primary' %>
      <%= link_to 'Cancel', raids_path, :class => 'btn' %>
    </div>
  </fieldset>
<% end %>
