= form_for @encounter, :html => { :class => 'form-horizontal' } do |f|
  %fieldset
    %legend
      = controller.action_name.capitalize
      /Encounter
    .control-group
      = f.label :url, :class => 'control-label'
      .controls
        = f.text_field :url, :class => 'text_field'
    .control-group
      = f.label :raid_id, :class => 'control-label'
      .controls
        = f.number_field :raid_id, :class => 'number_field'
    .control-group
      = f.label :health, :class => 'control-label'
      .controls
        = f.text_field :health, :class => 'text_field'
    .control-group
      = f.label :started_at, :class => 'control-label'
      .controls
        = f.datetime_select :started_at, :class => 'datetime_select'
    .form-actions
      = f.submit nil, :class => 'btn btn-primary'
      = link_to "Cancel", encounters_path, :class => 'btn'
